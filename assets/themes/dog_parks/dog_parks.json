{
    "id": "dog_parks",
    "title": {
      "en": "Dog Park Map",
      "de": "Karte mit Hundeauslaufzonen"
    },
    "shortDescription": {
      "en": "A map showing dog parks",
      "de": "Eine Karte die Hundeauslaufzone anzeigt"
    },
    "description": {
      "en": "On this map you can find and add data of dogs parks. You can use this map to find where you can let your doggy friend run free to their heart's content! <br/>Spotted an error or is a dog park missing? You can edit this map with a free OpenStreetMap account. "
    },
    "language": [
      "en",
      "de"
    ],
    "maintainer": "",
    "icon": "./assets/themes/dog_parks/dog.svg",
    "version": "0",
    "startLat": 53.5511,
    "startLon": 9.9937,
    "startZoom": 13,
    "widenFactor": 1.5,
    "defaultBackgroundId": "CartoDB.Voyager",
    "clustering": {
      "maxZoom": 14,
      "minNeededElements": 100
    },
    "layers": [
      {
        "id": "dog parks",
        "name": {
          "en": "Dog Parks"
        },
        "minzoom": 12,
        "source": {
          "osmTags": "leisure=dog_park"
        },
        "title": {
          "render": {
            "en": "Dog Park"
          }
        },
        "description": {
          "en": "A layer showing dog parks.",
          "de": "Eine Ebene mit Hundeauslaufzonen."
        },
        "tagRenderings": [
          "images",
          {
            "id": "minimap",
            "render": "{minimap(17): height: 10rem; overflow: hidden; border: 1px solid #A1A1A1; border-radius: 0.5rem; }"
          },
          {
            "render": {
              "en": "Opening Hours: {opening_hours_table()}"
            },
            "freeform": {
              "key": "opening_hours",
              "type": "opening_hours"
            },
            "question": {
              "en": "What are the opening hours for this dog park?"
            },
            "mappings": [
              {
                "if": "opening_hours=24/7",
                "then": {
                  "en": "24/7 opened (including holidays)",
                  "de": "durchgehend ge√∂ffnet (auch an Feiertagen)"
                }
              }
            ],
            "id": "OH"
          }
        ],
        "icon": {
          "render": "square:#DADADA;./assets/themes/dog_parks/dog.svg"
        },
        "iconOverlays": [
          {
            "if": "opening_hours~*",
            "then": "isOpen"
          }
        ],
        "width": {
          "render": "1"
        },
        "iconSize": {
          "render": "40,40,bottom"
        },
        "color": {
          "render": "#DADADA"
        },
        "presets": [
          {
            "tags": [
              "leisure=dog_park"
            ],
            "title": {
              "en": "Dog Park"
            }
          }
        ],
        "wayHandling": 2,
        "filter": [
          {
            "id": "is_open",
            "options": [
              {
                "question": {
                  "en": "Currently open"
                },
                "osmTags": "_isOpen=yes"
              }
            ]
          }
        ],
        "mapRendering": [
          {
            "icon": {
              "render": "square:#DADADA;./assets/themes/dog_parks/dog.svg"
            },
            "iconBadges": [
              {
                "if": "opening_hours~*",
                "then": "isOpen"
              }
            ],
            "iconSize": {
              "render": "40,40,bottom"
            },
            "location": [
              "point",
              "centroid"
            ]
          },
          {
            "color": {
              "render": "#A1A1A1"
            },
            "width": {
              "render": "1"
            }
          }
        ]
      }
    ]
  }
